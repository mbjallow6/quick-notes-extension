{
  "manifest_version": 3,
  "name": "Quick Note Scratchpad",
  "version": "1.1.0",
  "description": "A simple scratchpad for quick notes and code snippets",
  
  "permissions": [
    "storage"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Notes"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      }
    }
  }
}
